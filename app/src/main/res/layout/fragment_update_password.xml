<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".nav_frags.profile.UpdatePasswordFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:gravity="center"
            android:textSize="36sp"
            android:textColor="@color/dark_shade"
            android:layout_marginVertical="40dp"
            android:textStyle="bold"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send_via_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/TextAppearance.MaterialComponents.Button"
            android:background="@drawable/rounded_box_fill"
            android:backgroundTint="@color/dark_accent"
            android:layout_margin="20dp"
            android:text="Send Reset link Via Email"
            android:textAllCaps="true"
            android:elevation="10dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!--<androidx.appcompat.widget.AppCompatButton
            android:id="@+id/change_pass_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Otp via Phone"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            style="@style/TextAppearance.MaterialComponents.Button"
            android:background="@drawable/rounded_box_fill"
            android:backgroundTint="@color/dark_accent"
            android:elevation="10dp"
            android:layout_margin="20dp"/>-->

    </LinearLayout>

</FrameLayout>